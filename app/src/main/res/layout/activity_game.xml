<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundinfo"
    android:weightSum="1"
    android:layout_margin="@dimen/cardview_default_radius">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="62dp">

        <TextView
            android:text="Game Activity"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/txtFestival"
            android:textSize="36sp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="1"
        android:layout_height="100dp">

        <FrameLayout android:layout_height="match_parent"
            android:layout_width="120dp"
            android:id="@+id/f1">

            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/blank"
                android:id="@+id/i1"
                android:layout_width="120dp" />
        </FrameLayout>

        <FrameLayout android:layout_height="match_parent"
            android:layout_width="120dp"
            android:id="@+id/f2">

            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/blank"
                android:id="@+id/i2"
                android:layout_width="120dp" />
        </FrameLayout>

        <FrameLayout android:layout_height="match_parent"
            android:layout_width="120dp"
            android:id="@+id/f3">

            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/blank"
                android:id="@+id/i3"
                android:layout_width="120dp" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="1"
        android:layout_height="100dp">

        <FrameLayout android:layout_height="match_parent"
            android:layout_width="120dp"
            android:id="@+id/f4">

            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/blank"
                android:id="@+id/i4"
                android:layout_width="120dp" />
        </FrameLayout>

        <FrameLayout android:layout_height="match_parent"
            android:layout_width="120dp"
            android:id="@+id/f5">

            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/blank"
                android:id="@+id/i5"
                android:layout_width="120dp" />
        </FrameLayout>

        <FrameLayout android:layout_height="match_parent"
            android:layout_width="120dp"
            android:id="@+id/f6">

            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/blank"
                android:id="@+id/i6"
                android:layout_width="120dp" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="1"
        android:layout_height="100dp">

        <FrameLayout android:layout_height="match_parent"
            android:layout_width="120dp"
            android:id="@+id/f7">

            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/blank"
                android:id="@+id/i7"
                android:layout_width="120dp" />
        </FrameLayout>

        <FrameLayout android:layout_height="match_parent"
            android:layout_width="120dp"
            android:id="@+id/f8">

            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/blank"
                android:id="@+id/i8"
                android:layout_width="120dp" />
        </FrameLayout>

        <FrameLayout android:layout_height="match_parent"
            android:layout_width="120dp"
            android:id="@+id/f9">

            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/blank"
                android:id="@+id/i9"
                android:layout_width="120dp" />
        </FrameLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtFinish"
            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible" />
    </RelativeLayout>



    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="1200dp"
                android:layout_height="120dp">

                <ImageView
                    app:srcCompat="@drawable/blank"
                    android:id="@+id/s1"
                    android:layout_weight="1"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    app:srcCompat="@drawable/blank"
                    android:id="@+id/s2"
                    android:layout_weight="1"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    app:srcCompat="@drawable/blank"
                    android:id="@+id/s3"
                    android:layout_weight="1"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    app:srcCompat="@drawable/blank"
                    android:id="@+id/s4"
                    android:layout_weight="1"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    app:srcCompat="@drawable/blank"
                    android:id="@+id/s5"
                    android:layout_weight="1"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    app:srcCompat="@drawable/blank"
                    android:id="@+id/s6"
                    android:layout_weight="1"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    app:srcCompat="@drawable/blank"
                    android:id="@+id/s7"
                    android:layout_weight="1"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    app:srcCompat="@drawable/blank"
                    android:id="@+id/s8"
                    android:layout_weight="1"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    app:srcCompat="@drawable/blank"
                    android:id="@+id/s9"
                    android:layout_weight="1"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>